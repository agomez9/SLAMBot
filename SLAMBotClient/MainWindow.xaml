<Window x:Class="SLAMBotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Connect" Height="61" HorizontalAlignment="Left" Margin="10,11,0,0" Name="btnConnect" VerticalAlignment="Top" Width="75" Click="btnConnect_Click" />
        <Label Content="IP:" Height="28" HorizontalAlignment="Left" Margin="91,10,0,0" Name="lblIP" VerticalAlignment="Top" />
        <Label Content="Status:" Height="28" HorizontalAlignment="Left" Margin="91,44,0,0" Name="lblStatus" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="120,12,0,0" Name="txtIP" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
