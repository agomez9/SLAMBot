<UserControl x:Class="SLAMBotClient.GUIControls.CameraAngle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="111">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" TileMode="None" />
        </Grid.Background>
        <Canvas Height="200" HorizontalAlignment="Left" Name="canvasGrid" VerticalAlignment="Top" Width="50" Margin="29,0,0,0">
            <Canvas.Background>
                <ImageBrush ImageSource="/SLAMBotClient;component/Images/cameraAngleGrid.png" Stretch="Uniform" TileMode="None" />
            </Canvas.Background>
        </Canvas>
        <Label Content="Camera Angle: 0" Height="28" HorizontalAlignment="Left" Margin="0,196,0,0" Name="lblAngle" VerticalAlignment="Top" Foreground="Lime" FontWeight="Bold" />
        <Canvas Height="3" HorizontalAlignment="Left" Margin="29,99,0,0" Name="canvasSelection" VerticalAlignment="Top" Width="50" Background="Red" />
    </Grid>
</UserControl>
